# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to version control

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_DATABASE_ID=your_database_id_here
CLOUDFLARE_D1_TOKEN=your_d1_token_here

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password_here

# Worker Configuration
WORKER_NAME=iplc-ai

# Optional Integration Credentials
# Nextcloud Integration
NEXTCLOUD_URL=https://your-nextcloud-instance.com
NEXTCLOUD_USERNAME=your_nextcloud_username
NEXTCLOUD_PASSWORD=your_nextcloud_password

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Development Settings
NODE_ENV=development
LOG_LEVEL=info

# API Configuration
API_TOKEN=your_api_token_here

# IMPORTANT: After creating your .env file from this template:
# 1. Run: npx wrangler secret put CLOUDFLARE_API_TOKEN
# 2. Run: npx wrangler secret put ADMIN_PASSWORD
# 3. Run: npx wrangler secret put NEXTCLOUD_PASSWORD (if using Nextcloud)
# 4. Run: npx wrangler secret put SLACK_WEBHOOK_URL (if using Slack)