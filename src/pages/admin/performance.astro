---
import Layout from "@/layouts/Layout.astro";
import PerformanceMonitor from "@/components/PerformanceMonitor";

// Check authentication
const token = Astro.cookies.get("adminAuthToken")?.value;
if (!token) {
  return Astro.redirect("/admin/login");
}
---

<Layout title="Performance Monitoring">
  <div class="container mx-auto py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold">Performance Monitoring</h1>
      <p class="mt-2 text-gray-600">
        Monitor API endpoint performance, caching efficiency, and system metrics.
      </p>
    </div>
    
    <PerformanceMonitor client:load />
  </div>
</Layout>